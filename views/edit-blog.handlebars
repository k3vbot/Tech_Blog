<article>
    <a href="/dashbaord" class="is-pulled-right"> &larr; Back To Dashboard</a>
    <h2 class="title mt-5">Edit Blog Post</h2><hr>
    <form class="edit-post-form">
        <div>
            <label for="blog-title">Blog Title:</label>
            <input type="text" class="input" name="blog-title" value="{{blog.title}}"/>
        </div>
        <div>
            <label for="blog-content">Blog Content:</label>
            <input type="text" class="textarea" name="blog-content" value="{{blog.blog_content}}"/>
        </div>
        <div class="is-pulled-right">
            created by you on {{format_date blog.created_at}}
            |
            <a href="/blog/{{blog.id}}">{{blog.comments.length}} {{format_plural "comment" blog.comments.length}}</a>
        </div>
        <button type="submit" class="button is-success">Save Blog Post</button>
        <button type="button" class="button is-danger delete-blog-btn">Delete Blog Post</button>
    </form>
</article>

{{> comments blog.comments}}

<script src="assets/js/editBlog.js"></script>
<script src="assets/js/deleteBlog.js"></script>
<script src="assets/js/comment.js"></script>