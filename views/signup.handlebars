<div class="container ">
    <div class="row d-flex align-items-center min-vh-75">
        <div class="col-md-6 col-md-offset-3 mx-auto" id="log-sign">
            <br>
            <h2>Welcome to Tech Blog</h2>
            <form class="signup">
 
                <div class="form-group">
                    <label for="exampleInputUsername1">Username</label>
                    <input type="username" class="form-control" id="signupUsernameInput" placeholder="drjdoe">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="signupPasswordInput" placeholder="password">
                </div>
                <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                    <span class="sr-only">Error:</span> <span class="msg"></span>
                </div>
                <br>
                <button type="submit" class="btn btn-light" id="signupBtn">Sign Up</button>
            </form>
            <br />
            <p>Already have an account? Click <a href="/signin">here</a> to login!</p>
        </div>
    </div>
</div>

